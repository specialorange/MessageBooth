<div id="main" role="main">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="grey span3">
        <%= render 'layouts/left' %>
      </div>

      <div class="grey span7" id="capture-content">
        <%= render 'layouts/messages' %>

        <div class="row media">
          <table>
            <tr>
              <td class="media-type">Picture</td>
              <td class="media-type">Photo-Booth</td>
              <td class="media-type">Video</td>
              <td class="media-type">Audio</td>
              <td class="media-type">Letter</td>
              <td class="media-type">URL</td>
              <td class="media-type">Attachment</td>
              <td class="media-type">RSS</td>
              <td class="media-type">Image</td>
              <td class="media-type">FB</td>
              <td class="media-type">Twitter</td>
              <td class="media-type">G+</td>
            </tr>
            <tr>
              <td class="media-type"><i class="icon-camera-retro icon-large"></i></td>
              <td class="media-type"><i class="icon-film icon-large"></i></td>
              <td class="media-type"><i class="icon-facetime-video icon-large"></i></td>
              <td class="media-type"><i class="icon-music icon-large"></i></td>
              <td class="media-type"><i class="icon-edit icon-large"></i></td>
              <td class="media-type"><i class="icon-link icon-large"></i></td>
              <td class="media-type"><i class="icon-paper-clip icon-large"></i></td>
              <td class="media-type"><i class="icon-rss icon-large"></i></td>
              <td class="media-type"><i class="icon-picture icon-large"></i></td>
              <td class="media-type"><i class="icon-facebook-sign icon-large"></i></td>
              <td class="media-type"><i class="icon-twitter-sign icon-large"></i></td>
              <td class="media-type"><i class="icon-google-plus-sign icon-large"></i></td>
            </tr>
          </table>
        </div>

        <div class="row">
          <ul>

          </ul>
        </div>

        <div class="row" id="webcam">
        </div>
        
        <input type="button" value="Take picture" onclick="webcam.snap();" />


        <script type="text/javascript">
          // var now = new Date();
          // var filename = now.toISOString();
          // $('#calculatedFileName').val(filename);

          function onload_complete(msg) {
              // fetch the CSRF meta tag data
              var csrf_param = $('meta[name=csrf-param]').attr('content');
              var csrf_token = $('meta[name=csrf-token]').attr('content');

              // reset the api URL appending the auth token parameter
              webcam.set_api_url('<%= upload_photos_path %>' + '?' + csrf_param + "=" + encodeURI(encodeURI(csrf_token)));
          }

          function upload_complete(msg) {
              if (msg == 'ok') {
                  $('#new_photo').show();
                  $('#photo_description').focus();
              } else {
                  alert('An error occured');
                  webcam.reset();
              }
          }

          webcam.set_swf_url('/webcam.swf');
          webcam.set_api_url('<%= upload_photos_path %>');
          // Update filename
          // This is something you can do yourself, outside of JPEGCam. Simply provide a text field on your page, and when the button is clicked, grab the value from the text field and add it to your server URL using webcam.set_api_url(). Just add the filename as a query string parameter. For example:
          // var filename = document.getElementById('ID_OF_TEXT_FIELD').value;
          // webcam.set_api_url( 'http://yourserver.com/yourscript.php?filename=' + escape(filename) );

          webcam.set_quality(90);
          webcam.set_stealth( true );
          webcam.set_shutter_sound(true, '/shutter.mp3');
          webcam.set_hook('onLoad', 'onload_complete');
          webcam.set_hook('onComplete', 'upload_complete');
          var width = $(window).width();
          width = $('#webcam').width();
          // $('#webcam').html(webcam.get_html(640, 480));
          // $('#webcam').html(webcam.get_html((width*.5), ((width*.5)*3/4)));
          $('#webcam').html(webcam.get_html((width), ((width)*3/4)));
        </script>

        <%= form_for Photo.new, :html => {:style => "display: none;"} do |f| %>
          <div class="grey span2">
            <!-- <input type="hidden" name="fileName" id="calculatedFileName"> -->
            <p>
              <%= f.label :description %><br/>
              <%= f.text_field :description %>
            </p>
          </div>
          <div>
            <p>
              <%= f.submit "Save the photo" %>
              or <%= link_to "Take another", new_photo_path %>
            </p>
          </div>
        <% end %>
        <div>
          <ul>
            <% @photos.each do |photo| %>
            <%= validate_image(photo.image.url(:thumb))%>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="grey span2">
        <%= render 'layouts/right' %>
      </div>
    </div> <!-- end row -->
  </div> <!--! end of .container-fluid -->
</div> <!--! end of #main -->